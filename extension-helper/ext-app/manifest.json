{
  "manifest_version": 3,
  "name": "CRM Automation",
  "version": "1.2",
  "description": "An automation method for CRMs, made by o-lvl",
  
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "clipboardRead",
    "clipboardWrite" 
  ],
  
  "host_permissions": [  
    "https://crm.jeny.com.ar/*",
    "https://web.whatsapp.com/*"
    

  ],
  "content_scripts": [
    {
      "matches": ["https://crm.jeny.com.ar/addlead.php", "https://web.whatsapp.com/"],
      "js": ["./dist/content.js"],
      "css": ["style.css"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "./dist/src/popup/popup.html",
   "default_title": "Website Modifier"
  }
  
  

}