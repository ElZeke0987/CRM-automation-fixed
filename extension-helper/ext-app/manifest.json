{
  "manifest_version": 3,
  "name": "CRM Automation",
  "version": "1.2",
  "description": "An automation method for CRMs, made by o-lvl",
  "permissions": [
    "tabs",
    "windows",
    "storage",
    "scripting",
    "clipboardRead",
    "clipboardWrite" 
  ],
  
  "host_permissions": [  
    "https://crm.jeny.com.ar/*",
    "https://web.whatsapp.com/*"
    

  ],
  "background": {
    "service_worker": "dist/background.js",
    "type": "module"
  },
  
  "content_scripts": [
    {
      "matches": ["https://crm.jeny.com.ar/addlead.php", "https://web.whatsapp.com/*"],
      "js": ["dist/index.js"],
      "css": ["dist/style.css"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "./dist/src/popup/popup.html",
    "default_title": "Website Modifier"
  }
  
  

}